{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false
  },
  "include": [
    "src/electron/**/*",
    "src/skill-marketplace/checks-runner.ts",
    "src/skill-marketplace/skill-metadata.ts"
  ],
  "exclude": ["node_modules", "src/electron/preload.ts"]
}
