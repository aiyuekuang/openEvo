{
  "name": "file_write",
  "description": "写入文件内容。如果文件已存在则覆盖，不存在则创建（自动创建中间目录）。",
  "category": "devtools",

  "input": {
    "type": "object",
    "properties": {
      "file_path": {
        "type": "string",
        "description": "要写入的文件的绝对路径"
      },
      "content": {
        "type": "string",
        "description": "要写入的完整文件内容"
      }
    },
    "required": ["file_path", "content"]
  },

  "output": {
    "type": "object",
    "properties": {
      "success": {
        "type": "boolean",
        "description": "是否写入成功"
      },
      "bytes_written": {
        "type": "number",
        "description": "写入的字节数"
      },
      "error": {
        "type": "string",
        "description": "错误信息"
      }
    },
    "required": ["success"]
  },

  "mode": "code",
  "calls": [],
  "version": "1.0.0",
  "tags": ["devtools", "filesystem", "builtin"],
  "author": "openevo-team",
  "timeout": 10000,
  "retry": 0
}
